block variables
    - var title = "Заголовок шаблонный";
    - var description = "Описание шаблона";
    - var iconPath = null;
    - var appleIconPath = null;
    - var android32IconPath = null;
    - var android16IconPath = null;

doctype html 
html(lang="ru")
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content=description)
        link(rel="icon", href=iconPath)
        link(rel="apple-touch-icon", sizes="76x76", href=appleIconPath)
        link(rel="icon", type="image/png", sizes="32x32", href=android32IconPath)
        link(rel="icon", type="image/png", sizes="16x16", href=android16IconPath)
        link(rel="stylesheet", href="css/index.min.css")
        script(src="js/app.min.js", defer)
        title #{title}
    body 
        block content